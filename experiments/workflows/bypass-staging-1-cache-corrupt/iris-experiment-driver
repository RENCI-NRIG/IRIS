#!/bin/bash

sleep 2m

echo
echo `date` "Corrupting the cache at syracuse..."
# cj_storage.py might be confused about the state, so "revert" first
ssh syr-compute-c2 "sudo /root/chaos-jungle/storage/cj_storage.py --revert -f /cache/uc-staging-~$USER-inputs-Visual_Signaling_By_Signal_Corps_United_States_Army.txt.cached --onetime" >/dev/null 2>&1
ssh syr-compute-c2 "sudo /root/chaos-jungle/storage/cj_storage.py -f /cache/uc-staging-~$USER-inputs-Visual_Signaling_By_Signal_Corps_United_States_Army.txt.cached --onetime"

sleep 5m 

echo
echo `date` "Clearing the cache at syracuse..."
ssh syr-compute-c2 "sudo rm -f /cache/uc-staging-~$USER*"

